#!/usr/bin/env bash
# Display information about subdomains

subdomain_info () {
    dig_output=$(dig "$2"."$1" | grep -A1 'ANSWER SECTION:' | tr '\t' '\n' | tail -2 | tr '\n' ' ')
    echo "$2 $dig_output" | awk '{print "The subdomain " $1 " is a " $2 " record and points to " $3}'
}

if [ "$#" == 1 ]
then
  subdomain_info "$1" "www"
  subdomain_info "$1" "lb-01"
  subdomain_info "$1" "web-01"
  subdomain_info "$1" "web-02"
elif [ "$#" == 2 ]
then
  subdomain_info "$1" "$2"
fi
